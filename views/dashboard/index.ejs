    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Authentication App with NodeJS</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    </head>
    <body>

       <nav class="navbar navbar-default">
			<div class="container">
				<div class="navbar-header"><a href="/dashboard" class="navbar-brand">Authentication App with NodeJS</a></div>

				<ul class="nav navbar-nav navbar-right">
					<li><a href="/dashboard">Dashboard</a></li>
					<li><a href="/store">Create a Nerd</a></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
			</div>
		</nav>

		<main>
			<div class="container">
				
				<h1>Welcome <%= user.local.firstname %> <%= user.local.lastname %></h1>
				<p>You are viewing all the nerds</p>
				
				<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<td>ID</td>
							<td>Name</td>
							<td>Email</td>
							<td>Nerd Level</td>
							<td>Actions</td>
						</tr>
					</thead>
					<tbody>
						<% nerds.forEach(function(nerds) { %>
							<tr>
								<td><%= nerds._id %></td>
								<td><%= nerds.name %></td>
								<td><%= nerds.email %></td>
								<td><%= nerds.nerd_level %></td>

								<!-- we will also add show, edit, and delete buttons -->
								<td>

									<!-- delete the nerd (uses the delete method found at GET /nerd/{id}/delete) -->
									<a class="btn btn-warning pull-right" href="/nerd/<%= nerds._id %>/delete">Delete this Nerd</a>

									<!-- show the nerd (uses the show method found at GET /nerds/{id} -->
									<a class="btn btn-small btn-success" href="/nerd/<%= nerds._id %>">Show this Nerd</a>

									<!-- edit this nerd (uses the edit method found at GET /nerds/{id}/edit -->
									<a class="btn btn-small btn-info" href="/nerd/<%= nerds._id %>/edit">Edit this Nerd</a>
								</td>
							</tr>
						<% }); %>
					</tbody>
				</table>

			</div>
		</main>

    </body>
</html>